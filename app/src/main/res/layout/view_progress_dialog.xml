<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/viewProgressDialogProgressIndicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginTop="24dp"
        app:indicatorTrackGapSize="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackCornerRadius="24dp"
        app:trackStopIndicatorSize="0dp"
        app:trackThickness="24dp"/>

    <TextView
        android:id="@+id/viewProgressDialogTextViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintStart_toStartOf="@+id/viewProgressDialogProgressIndicator"
        app:layout_constraintTop_toBottomOf="@+id/viewProgressDialogProgressIndicator" />

    <TextView
        android:id="@+id/viewProgressDialogTextViewCounting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0/0"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintEnd_toEndOf="@+id/viewProgressDialogProgressIndicator"
        app:layout_constraintTop_toBottomOf="@+id/viewProgressDialogProgressIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>