<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/apk_details_layout_bottom_sheet_drag_handle_view"/>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_bottom_sheet_drag_handle_view"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/apk_details_layout_image_view_launcher_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/apk_details_layout_image_view_launcher_icon"
            android:text="@string/app_name"
            app:layout_constraintTop_toTopOf="@id/apk_details_layout_image_view_launcher_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="start"
            android:layout_marginStart="12dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:id="@+id/apk_details_layout_text_view_app_name"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/package_name"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_app_name"
            app:layout_constraintStart_toEndOf="@id/apk_details_layout_image_view_launcher_icon"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/apk_details_layout_image_view_launcher_icon"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="10sp"
            android:id="@+id/apk_details_layout_text_view_package_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_image_view_launcher_icon"
            android:text="@string/size"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:layout_marginTop="24dp"
            android:id="@+id/apk_details_layout_text_view_label_size" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_label_size"
            android:text="@string/version_code"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:layout_marginTop="24dp"
            android:id="@+id/apk_details_layout_text_view_label_version_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/version_name"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_label_version_code"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/apk_details_layout_text_view_label_version_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_label_version_name"
            android:text="@string/installation_time"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:layout_marginTop="24dp"
            android:id="@+id/apk_details_layout_text_view_label_installation_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/last_update_time"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_label_installation_time"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/apk_details_layout_text_view_label_last_update_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_label_last_update_time"
            android:text="@string/permissions"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:layout_marginTop="24dp"
            android:id="@+id/apk_details_layout_text_view_label_permissions" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lorem Ipsum Permission For UI Designing\nLorem Ipsum Permission For UI Designing\nLorem Ipsum Permission For UI Designing\nLorem Ipsum Permission For UI Designing"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_label_permissions"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/apk_details_layout_text_view_content_permissions"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_this_app_in_the_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apk_details_layout_text_view_content_permissions"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/apk_details_layout_button_app_settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>